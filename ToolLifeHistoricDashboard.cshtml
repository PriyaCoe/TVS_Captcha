                        cols += "<td> " + response.data.Table[i].Remarks + "</td> ";
                        cols += "</tr>";
                        newRow.append(cols);
                        $(".PM_details").append(newRow);
                        j++;
                    }
                    $("#datatable_PM").DataTable({
                        "responsive": true,
                        "autoWidth": false,
                        "searching": true,
                    });
                }
            }
        });
    }


</script>

