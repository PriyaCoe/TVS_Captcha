        modal.style.display = "block";
        var myData = {
            "Flag": "PM_details",
            "ToolID": Tool_ID,
            "linename": '@Session["LineCode"]',
            "Status": Serial_no,
            "CompanyCode": '@Session["CompanyCode"]',
            "PlantCode": '@Session["PlantCode"]'
        };
        var R_url = '@Url.Action("Login", "Main")';
        var user1 = '@Session["Token"]' + ':' + '@Session["UserName"]';
        $.ajax({
            type: "POST",
            url: URL1 + 'api/Toollife/Get_PM_Details',
            headers: {
                Authorization: 'Bearer ' + user1
            },
            data: myData,
            dataType: "json",
            beforeSend: function () {
                $('.loading').show();
            },
            complete: function () {
                $('.loading').hide();
            },
            success: function (response) {
                console.log(response);
                var rowsCnt = document.getElementById("datatable_PM").getElementsByTagName("tbody")[0].getElementsByTagName("tr").length;
                if (rowsCnt > 0) {
                    for (var i = 0; i < rowsCnt; i++) {
                        document.getElementById("datatable_PM").deleteRow(1);
                    }
                }
                if ($.fn.DataTable.isDataTable('#datatable_PM')) {
                    $('#datatable_PM').DataTable().clear();
                }

                if ($.fn.DataTable.isDataTable('#datatable_PM')) {
                    $('#datatable_PM').DataTable().destroy();
                }
                if (response.data.Table.length != 0) {
                    var j = 1;
                    for (var i = 0; i < response.data.Table.length; i++) {
                        var newRow = $("<tr>");
                        var cols = '';
                        cols += "<td> " + j + "</td> ";
                        cols += "<td> " + response.data.Table[i].ToolID + "</td> ";
                        cols += "<td> " + response.data.Table[i].LastMaintenaceDate + "</td> ";
